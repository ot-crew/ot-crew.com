li
  h3
    a( href=photo_for( user ) ): img( src=photo_for( user ) )
    = user.name

  ul
    - if (typeof(user.irc) !== 'undefined')
      li.irc IRC nick: #{user.irc}

    - if (typeof(user.twitter) !== 'undefined')
      li.twitter Twitter:
        a( href="http://twitter.com/" + user.twitter, class="twitter-anywhere-user" ) @#{user.twitter}

    - if (typeof(user.github) !== 'undefined')
      li.github GitHub: 
        a( href="https://github.com/" + user.github )= user.github

    li.location Location: #{user.location}
      a( href="http://maps.google.com/maps?&amp;q=" + (user.coords || user.location), title="Show it on a big map" )
        img( src="http://maps.google.com/maps/api/staticmap?center=" + (user.coords || user.location) + "&amp;zoom=14&amp;size=175x175&amp;maptype=roadmap&amp;sensor=false", width="175", height="175" )

    - if (typeof(user.occupation) !== 'undefined')
      li.occupation Occupation: 
        != user.occupation

    - if (typeof(user.birthday) !== 'undefined')
      li.birthday Birthday: #{user.birthday}

